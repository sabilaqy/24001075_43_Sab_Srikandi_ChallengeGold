    <div class="row p-4">
            <div class="col">
                <div class="table-responsive-sm">
                    <table class="table">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Products_id</th>
                                <th>Quantity</th>
                                <th>Total Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% orders.forEach(function (value) { %>
                                <tr>
                                    <td>
                                        <%= value.order_id %>
                                    </td>
                                    <td>
                                        <%= value.product_id %>
                                    </td>
                                    <td>
                                        <%= value.quantity %>
                                    </td>
                                    <td>
                                        <%= value.total_price %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                
                    </table>
                    
                </div>
                <div class="d-inline">
                    <a href="/customers">
                        <button class="btn btn-secondary" type="button">Back</button>
                    </a>
                    <a href="/orders/editor/add">
                        <button class="btn btn-primary" type="button"><i class="fa-plus">Add item</i></button>
                    </a>
                </div>
            </div>
            
        </div>
   
